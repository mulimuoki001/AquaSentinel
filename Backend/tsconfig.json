{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node", // ‚Üê change this
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "test/sensor.test.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}